<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="juegoDados.MainPage">

    
    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">

        <Label Text="Hola"
               x:Name="valorDado"
               FontSize="20"
               TextColor="Aqua"
               BackgroundColor="Red"/>
        <Button x:Name="girarDado"
                Text="Girar dado"
                Clicked="botonGirarDado"/>

    </VerticalStackLayout>
    

</ContentPage>
